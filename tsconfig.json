{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react-native"
  },
  "exclude": [
    "node_modules"
  ]
}
